<Window x:Class="ImageLibraryGui.ImageViewer.Histogram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Histogram" MinHeight="300" MinWidth="350">
    <Grid>
        <!-- http://trompelecode.com/blog/2012/04/how-to-create-an-image-histogram-using-csharp-and-wpf/ -->
        <GroupBox Grid.Column="0" Grid.Row="0" Header="Histogram" BorderThickness="0">
            <Border BorderThickness="1" BorderBrush="Black" Background="White" Margin="4">
                <Polygon Points="{Binding HistogramPoints}" Stretch="Uniform" Fill="Black" Opacity="0.8" />
            </Border>
        </GroupBox>
    </Grid>
</Window>
